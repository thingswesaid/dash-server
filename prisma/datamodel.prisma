type User {
  id: ID! @unique
  firstName: String
  lastName: String
  email: String @unique
  password: String
  phone: String
  ips: [String!]
  videos: [Video]!
  promoCodes: [PromoCode]
  active: Boolean! @default(value: "true")
  orders: [Order]! @default(value: [])
  subscribePromo: Boolean! @default(value: "true")
  subscribeEarlyAccess: Boolean! @default(value: "true")
  subscribeNews: Boolean! @default(value: "true")
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Video {
  id: ID! @unique
  name: String
  keywords: String
  title: String
  link: String
  preview: String!
  image: String!
  placeholder: String!
  imageVertical: String
  placeholderVertical: String
  users: [User]!
  published: Boolean! @default(value: "false")
  price: Float!
  start: Int!
  type: VideoType!
  familyId: String @default(value: "")
  promoVideo: PromoVideo
  suggest: Boolean! @default(value: "true")
  options: [String]
}

type PromoVideo {
  id: ID! @unique
  link: String!
  title: String!
  description: String!
  image: String!
  placeholder: String
  familyId: String! @default(value: "")
  banner: String!
  bannerMobile: String!
  type: VideoType!
  video: Video
}

type PromoCode {
  id: ID! @unique
  code: String! @unique
  valid: Boolean! @default(value: "true")
  type: VideoType!
  endDate: String
  user: User!
  video: Video
  createdAt: DateTime!
  updatedAt: DateTime!
}

type SitePromo {
  id: ID! @unique
  type: VideoType!
  promoOffer: PromoOffer!
  startDate: String
  endDate: String
  title: String!
  subtitle: String!
  description: String!
  newPrice: Float
}

type Product {
  id: ID! @unique
  link: String!
  name: String!
  description: String!
  image: String!
  placeholder: String!
  type: String!
}

type Order {
  id: ID! @unique
  paymentId: String! @unique
  user: User
  video: Video
  paymentEmail: String
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Quote {
  id: ID! @unique
  text: String!
  linkTo: String
}

enum VideoType {
  ZODIAC
  PICKACARD
}

enum PromoOffer {
  BUY1GET1
  DISCOUNT
}