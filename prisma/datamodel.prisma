type User {
  id: ID! @unique
  firstName: String
  lastName: String
  email: String! @unique
  phone: String
  ips: [String!]
  subscribed: Boolean! @default(value: "true")
  videos: [Video]!
  active: Boolean! @default(value: "true")
  orders: [Order]! @default(value: [])
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Video {
  id: ID! @unique
  name: String!
  title: String
  link: String!
  preview: String!
  image: String!
  placeholder: String
  users: [User]!
  published: Boolean! @default(value: "false")
  amount: Float
  start: Int!
  type: VideoType!
  familyId: String @default(value: "")
  promoVideo: PromoVideo
  suggest: Boolean! @default(value: "true")
}

type PromoVideo {
  id: ID! @unique
  link: String!
  title: String!
  description: String!
  image: String!
  placeholder: String
  familyId: String! @default(value: "")
  banner: String!
  bannerMobile: String!
  type: VideoType!
  video: Video
}

type PromoCode {
  id: ID! @unique
  code: String! @unique
  valid: Boolean! @default(value: "true")
  user: User!
  video: Video
}

type SitePromo {
  id: ID! @unique
  type: VideoType!
  promoOffer: PromoOffer!
  startDate: DateTime!
  endDate: DateTime!
}

type Product {
  id: ID! @unique
  link: String!
  name: String!
  description: String!
  image: String!
  placeholder: String!
  type: String!
}

type Order {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  paymentId: String! @unique
  user: User
  video: Video
}

enum VideoType {
  ZODIAC
  PICKACARD
}

enum PromoOffer {
  BUY1GET1
  BUY2GET1
}