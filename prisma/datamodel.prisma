type Post {
  id: ID! @unique
  published: Boolean! @default(value: "false")
  title: String!
  content: String!
}

type User {
  id: ID! @unique
  email: String! @unique
  ips: [String!]
  subscribed: Boolean! @default(value: "true")
  videos: [Video]!
  status: Status!
  # save credit card? Depends data returned from Stripe | save paypal Gpay info?
}

type Video {
  id: ID! @unique
  link: String!
  preview: String!
  image: String!
  users: [User]!
}

type Product {
  id: ID! @unique
  link: String!
  title: String!
  description: String!
  image: String!
}

enum Status {
  ACTIVE
  BLOCKED
}